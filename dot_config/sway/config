# Servicios esenciales (solo una vez)
exec mako 
exec waybar
#exec nm-applet --indicator

# Utilidades
exec autotiling --splitwidth 0.9
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1

# Variables de entorno para una mejor integración (opcional pero recomendado)
exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec dbus-update-activation-environment --systemd DISPLAY WAYLAND_DISPLAY SWAYSOCK

# Titulo de foot
for_window [app_id="foot"] border pixel 1
for_window [app_id="foot"] border radius 30px
#default_border pixel 1
gaps inner 5
gaps outer 5
smart_gaps off
hide_edge_borders smart

client.focused #6272a4 #6272a4 #000000 #fc2d2d
client.unfocused #000000 #000000 #6272a4
client.focused_inactive #000000 #000000 #6272a4

include /etc/sway/config.d/*
